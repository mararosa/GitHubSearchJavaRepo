<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/act_detail_user_image_header"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/act_detail_header_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@+id/act_detail_user_image_header"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/act_detail_username_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/act_detail_header_tv"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/act_detail_githubLink_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/github_profile_link"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/act_detail_username_tv"/>
    <TextView
        android:id="@+id/act_detail_link_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/act_detail_githubLink_tv"
        android:gravity="center_horizontal" />

</RelativeLayout>